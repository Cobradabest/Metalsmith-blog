<!DOCTYPE html>
<html lang="{{ locale }}">
<head>
  <meta charset="utf-8">
  <title>{{ site.name }}</title>
  <meta name="description" content="{{ site.description }}" />
</head>
<body>
  <h1>{{ site.name }}</h1>

  <div class="recent">
  {{#each articles_sco}}
      <span class="title"><a href="{{ path }}">{{ title }}</a></span>
	  <div>{{{ contents }}}</div>
      <span class="date">{{ date }}</span>
	  <hr>
  {{/each}}
  </div>

</body>
</html>